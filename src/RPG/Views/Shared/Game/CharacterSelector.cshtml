@using RPG.Controllers.Common
@model RPG.Models.ControllerDto.Game.CharacterSelectorDto

@{
    ViewBag.Title = "CharacterSelector";
    Layout = "~/Views/Shared/GameLayoutPage.cshtml";
}

@using (Html.BeginForm("Load", "CharacterSelector", FormMethod.Post))
{
    <h2>Select Character</h2>
    <div class="col-xs-12">
    @if (Model.Characters != null)
    {
        for (var i = 0; i < Model.Characters.Count; i++)
        {
            <div class="row btn btn-default" onclick="location.href = '@(Url.Action("Index", "CharacterOverview", new { Id = Model.Characters[i].ID }))'">
                <div class="col-xs-4">
                    <div class="row">
                        @Html.HiddenFor(x => x.Characters[i].ID)
                        @Html.DisplayTextFor(x => x.Characters[i].Name)
                    </div>
                </div>
                <div class="col-xs-8">
                    <div class="row">
                        @Html.DisplayTextFor(x => x.Characters[i].Description)
                    </div>
                </div>
            </div>
        }
    }
    </div>
}