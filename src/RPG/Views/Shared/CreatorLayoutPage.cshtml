@model RPG.Models.ControllerDto.Creator.DataDto
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/scripts")
    
    @Styles.Render("~/Content/chosen")
    @Scripts.Render("~/bundles/chosen")
</head>
    <body>
        <nav class="navbar navbar-inverse navbar-fixed-top">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="/">Home</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Characters", "Index", "CharacterCreator")</li>
                <li>@Html.ActionLink("Classes", "Index", "Class")</li>
                <li>@Html.ActionLink("Condition", "Index", "Condition")</li>
                <li>@Html.ActionLink("Bonuses", "Index", "Bonus")</li>
                <li>@Html.ActionLink("Items", "Index", "Item")</li>
                <li>@Html.ActionLink("Materials", "Index", "ItemMaterial")</li>
                <li>@Html.ActionLink("Languages", "Index", "Language")</li>
                <li>@Html.ActionLink("Races", "Index", "Race")</li>
                <li>@Html.ActionLink("Skills", "Index", "Skill")</li>
                <li>@Html.ActionLink("Special Abilities", "Index", "SpecialAbility")</li>
                <li>@Html.ActionLink("Spells", "Index", "Spell")</li>
              </ul>
            </div><!--/.nav-collapse -->
          </div>
        </nav>

        <div id="container" class="container-fluid">
            <div class="col-xs-12 col-md-8 col-lg-8 col-lg-offset-1">
                <div class="row">
                    <div class="col-xs-12 col-md-12">
                        <div class="row">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-4 col-lg-2 col-lg-offset-1" >
                <h2>Existing items</h2>
                <div class="row">
                    <div class="col-xs-12 btn-group">
                        @if (Model != null && Model.Data != null)
                        {
                            foreach (var lan in Model.Data)
                            {
                                <a class="btn btn-primary btn-block" href="@Url.Action("Index", new { id = @lan.ID })">@lan.Name</a>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        
        
        @Scripts.Render("~/bundles/documentready")
    </body>
</html>
