@using RPG.Controllers.Common
@using RPG.Controllers.Extenstions
@model RPG.Models.ControllerDto.GM.MapDto

@{
    ViewBag.Title = "Create Map";
    Layout = "~/Views/Shared/GM/GMLayoutPage.cshtml";
}

@using(Html.BeginForm("Save","Map",FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-xs-12">
            <h2>Add map</h2>
            <div class="form-group">
                <div class="row">
                    @Html.HiddenFor(m => m.SelectedItem.ID)
                    @Html.LabelForRequired(m => m.SelectedItem.Name) 
                    @Html.TextBoxFor(m => m.SelectedItem.Name,HtmlConfiguration.TextBoxFor_Text)
                    @Html.ValidationMessageFor(m => m.SelectedItem.Name)
                </div>
                <div class="row">
                    <label>Description:</label>
                    @Html.TextAreaFor(m => m.SelectedItem.Description,HtmlConfiguration.TextBoxFor_Text)
                </div>
                <div class="row">
                    <label>Image height:</label>
                    @Html.TextBoxFor(m => m.SelectedItem.Height, HtmlConfiguration.TextBoxFor_Number)
                </div>
                <div class="row">
                    <label>Image width:</label>
                    @Html.TextBoxFor(m => m.SelectedItem.Width, HtmlConfiguration.TextBoxFor_Number)
                </div>
                <div class="row">
                    <label>Image minimum zoom:</label>
                    @Html.TextBoxFor(m => m.SelectedItem.MinZoom, HtmlConfiguration.TextBoxFor_Number)
                </div>
                <div class="row">
                    <label>Image maximum zoom:</label>
                    @Html.TextBoxFor(m => m.SelectedItem.MaxZoom, HtmlConfiguration.TextBoxFor_Number)
                </div>
                <div class="row">
                    <label>Distance factor (used to correct measurements):</label>
                    @Html.TextBoxFor(m => m.SelectedItem.DistanceScale, HtmlConfiguration.TextBoxFor_Number)
                </div>
                <div class="row">
                    <label>Tiles:</label>
                    @Html.TextBoxFor(m => m.Data, HtmlConfiguration.TextBoxFor_File)
                </div>
            </div>
            <button class="btn btn-primary">Save</button>
            <a class="btn btn-primary" href="@Url.Action("CreateMapIndex","Map", new { id = (Guid?)null })">New</a>
            @Html.ActionLink("Delete","Delete", "Map", new { id = Model != null && Model.SelectedItem != null ? Model.SelectedItem.ID : (Guid?)null},HtmlConfiguration.ActionLink_Button)
        </div>
    </div>
}